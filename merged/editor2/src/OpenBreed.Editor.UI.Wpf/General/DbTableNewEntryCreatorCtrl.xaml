<UserControl x:Class="OpenBreed.Editor.UI.Wpf.General.DbTableNewEntryCreatorCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenBreed.Editor.UI.Wpf.General"
             mc:Ignorable="d" 
             d:DesignHeight="65" d:DesignWidth="309">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../CommonResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="30"/>
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>
        <ComboBox Grid.Row="0"
                  Grid.Column="0"
                  Margin="4"        
                  ItemsSource="{Binding EntryTypes}"
                  DisplayMemberPath="Name"
                  SelectedItem="{Binding SelectedEntryType}"/>
        <Button Grid.Row="0"
                Grid.Column="1"
                Style="{StaticResource ConfirmButtonStyle}"
                IsEnabled="{Binding CreateEnabled}"
                Command="{Binding CreateCommand}">
            <Image/>
        </Button>
        <Button Grid.Row="0"
                Grid.Column="2"
                Style="{StaticResource CancelButtonStyle}"
                Command="{Binding CancelCommand}">
            <Image/>
        </Button>
        <TextBox Grid.Row="1"
                 Grid.Column="0"
                 Grid.ColumnSpan="3"
                 Margin="4"
                 Text="{Binding NewId}"/>
    </Grid>
</UserControl>
