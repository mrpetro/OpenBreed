<UserControl x:Class="OpenBreed.Editor.UI.Wpf.Options.EditorOptionsAbhc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenBreed.Editor.UI.Wpf.Options"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0"
                Grid.Row="0"
                Margin="4"
                Height="22"
                Content="Select game folder"
                Command="{Binding SelectGameFolderCommand}"/>
        <TextBox Grid.Column="1"
                 Grid.Row="0"
                 Margin="4"
                 Height="22"
                 Text="{Binding GameFolderPath}"
                 />
    </Grid>
</UserControl>
